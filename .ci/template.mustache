jobs:
  include:
    {{#languages}}
    - stage: lint
      language: generic
      script: bash .ci/lint.sh
      env: LANGUAGE={{.}} DIRECTORY={{.}}
    {{/languages}}
    
    
    {{#frameworks}}
    - stage: test
      language: crystal
      env: FRAMEWORK={{.}}
      services: docker
    {{/frameworks}}

notifications:
  email: false
