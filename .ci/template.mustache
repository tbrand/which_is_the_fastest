# Use latest ubuntu LTS (18.04)
dist: bionic

services:
  - docker # Use docker to containerize frameworks
  - redis # Use redis to store data

# This tool is written in crystal
language: crystal

env:
  matrix:
    {{#frameworks}}
    - FRAMEWORK={{.}}
    {{/frameworks}}

script:
  - shards install
  - shards build
  - bin/make config --without-sieger
  - bin/neph ${FRAMEWORK} --mode=CI
  - crystal spec

notifications:
  email: false
